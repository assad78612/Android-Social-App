<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/colorAccent2"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New York"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="This is some example text. This is some example text. This is some example text. This is some example text. This is some example text. This is some example text. This is some example text. This is some example text. This is some example text."
                android:textColor="#ffffff"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/timePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_toStartOf="@+id/eventTime"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="Time Posted:"
                android:textColor="#A1FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="3:42 PM"
                android:textColor="@color/colorTransparentBlack"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/eventAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventDescription"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="af410"
                android:textColor="#ffffff" />


            <TextView
                android:id="@+id/timeofEvent"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_below="@id/eventAuthor"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="139dp"
                android:layout_toStartOf="@+id/jointEventBtn"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="Time of Event "
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/jointEventBtn"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventAuthor"
                android:layout_alignParentEnd="true"
                android:text="Join Event"
                android:textSize="11dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
